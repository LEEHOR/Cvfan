<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:background="@color/menu_backgruond"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <ImageView
                android:id="@+id/meau_driver_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/default_driver_logo" />

            <TextView
                android:id="@+id/meau_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/meau_driver_logo"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/content_color_dark"/>

           <RelativeLayout
            android:id="@+id/rl_search_maintain_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <ImageView
                android:id="@+id/iv_search_maintain_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/search_station_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_search_maintain_station"
                android:text="@string/search_maintain_station"
                android:textColor="#f0f0f0"
                android:textSize="20sp" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/content_color_dark"/>

        <RelativeLayout
            android:id="@+id/rl_vehicle_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_vehicle_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/truck_manage_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_vehicle_manage"
                android:text="@string/vehicle_manage"
                android:textColor="#f0f0f0"
                android:textSize="20sp" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/content_color_dark"/>

        <RelativeLayout
            android:id="@+id/rl_maintain_paper_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_maintain_paper_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/maitain_paper_manage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_maintain_paper_manage"
                android:text="@string/maintain_paper_manage"
                android:textColor="#f0f0f0"
                android:textSize="20sp" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/content_color_dark"/>

     
        
        <RelativeLayout
            android:id="@+id/rl_personal_cente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <ImageView
                android:id="@+id/iv_personal_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/personal_center_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_personal_center"
                android:text="@string/personal_center"
                android:textColor="#f0f0f0"
                android:textSize="20sp" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/content_color_dark"/>

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/setting_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_setting"
                android:text="@string/setting"
                android:textColor="#f0f0f0"
                android:textSize="20sp" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/content_color_dark"/>
    </LinearLayout>

</RelativeLayout>