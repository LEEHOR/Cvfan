<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_color"
    >

    <LinearLayout
         android:id="@+id/ll_rb_final"
         android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:gravity="center"
         >
	    <RatingBar
	        android:id="@+id/rb_final"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        style="@style/commentRatingBar_star"
	        android:isIndicator="true"
	        android:rating="5.0"
	         />
	</LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_appraise"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_rb_final"
        android:background="@color/white"
        android:padding="15dp" >

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_appraise_hint" 
            android:textSize="15sp"
            android:textColor="#8e8e8e"/>

        <RelativeLayout
            android:id="@+id/ll_service_quality"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_hint"
            android:layout_below="@+id/tv_hint"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_service_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/service_quality"
                android:textColor="#424242"
                android:textSize="16sp" />
            
            <RatingBar
            	android:id="@+id/rb_service_quality"
            	android:layout_width="150dp"
            	android:layout_height="wrap_content"
            	android:layout_toRightOf="@+id/tv_service_quality"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="10dp"
            	style="@style/commentRatingBar"
            	android:background="@drawable/roundcornershape"
            	android:numStars="5"
            	android:rating="5.0"/>

            <TextView
                android:id="@+id/tv_quality_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rb_service_quality"                
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/pretty_good"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_quality"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="1" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_quality"
                android:layout_centerVertical="true"
                android:layout_marginLeft="41dp"
                android:text="2" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_quality"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dp"
                android:text="3" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_quality"
                android:layout_centerVertical="true"
                android:layout_marginLeft="99dp"
                android:text="4" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_quality"
                android:layout_centerVertical="true"
                android:layout_marginLeft="128dp"
                android:text="5" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_service_speed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_service_quality"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_service_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/service_speed"
                android:textColor="#424242"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rb_service_speed"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_service_speed"
                android:layout_centerVertical="true"
            	android:layout_marginLeft="10dp"
            	style="@style/commentRatingBar"
            	android:background="@drawable/roundcornershape"
            	android:numStars="5"
            	android:rating="5.0" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_speed"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="1" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_speed"
                android:layout_centerVertical="true"
                android:layout_marginLeft="41dp"
                android:text="2" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_speed"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dp"
                android:text="3" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_speed"
                android:layout_centerVertical="true"
                android:layout_marginLeft="99dp"
                android:text="4" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_speed"
                android:layout_centerVertical="true"
                android:layout_marginLeft="128dp"
                android:text="5" />

            <TextView
                android:id="@+id/tv_speed_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rb_service_speed"    
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/pretty_good"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_service_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_service_speed"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_service_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/service_price"
                android:textColor="#424242"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rb_service_price"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_service_price"
                android:layout_centerVertical="true"
            	android:layout_marginLeft="10dp"
            	style="@style/commentRatingBar"
            	android:background="@drawable/roundcornershape"
            	android:numStars="5"
            	android:rating="5.0" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_price"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="1" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_price"
                android:layout_centerVertical="true"
                android:layout_marginLeft="41dp"
                android:text="2" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_price"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dp"
                android:text="3" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_price"
                android:layout_centerVertical="true"
                android:layout_marginLeft="99dp"
                android:text="4" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_alignLeft="@+id/rb_service_price"
                android:layout_centerVertical="true"
                android:layout_marginLeft="128dp"
                android:text="5" />

            <TextView
                android:id="@+id/tv_price_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rb_service_price"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/pretty_good"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        

    </RelativeLayout>

    <EditText
        android:id="@+id/et_suggest"
        android:layout_width="fill_parent"
        android:layout_height="100dp" 
        android:background="@drawable/shape_no_corner_without_bottom"
        android:layout_below="@+id/rl_appraise"
        android:layout_marginTop="20dp"
        android:hint="@string/comment_station_hint"
        android:padding="10dp"
        android:textSize="16sp"/>

</RelativeLayout>