<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_auth_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/auth_line2" />

    <ImageView
        android:id="@+id/iv_score_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_left_score_info"
        android:layout_alignTop="@+id/rl_left_score_info"
        android:layout_centerHorizontal="true"
        android:src="@drawable/vertical_bar" />

    <RelativeLayout
        android:id="@+id/rl_left_score_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/iv_score_line"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_total_scpre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/jifen_img1" />

        <RelativeLayout
            android:id="@+id/rl_score_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_total_scpre"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_total_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_total_score_name"
                android:gravity="left"
                android:text="2550"
                android:textColor="#248be3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_total_score_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:text="累积积分："
                android:textColor="#5c5c5c"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_right_mall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_score_line"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_score_line"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/iv_score_line"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_mall_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/jifen_img2" />

        <TextView
            android:id="@+id/tv_shop_score_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_mall_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="积分商城"
            android:textColor="#5c5c5c"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_score_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_left_score_info"
        android:layout_marginTop="20dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_auth_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/xq_img12" />

        <TextView
            android:id="@+id/tv_mobile_auth_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_auth_line"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="积分明细"
            android:textColor="#8e8e8e"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_score_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/renzheng_img2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_score_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_score_detail"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_line_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/xq_img12" />

        <TextView
            android:id="@+id/tv_score_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_line_first"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="兑换记录"
            android:textColor="#8e8e8e"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_score_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/renzheng_img2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_exchange_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_score_exchange"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_line_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/xq_img12" />

        <TextView
            android:id="@+id/tv_exchange_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_line_second"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="积分规则"
            android:textColor="#8e8e8e"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_rule_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/renzheng_img2" />
    </RelativeLayout>

</RelativeLayout>