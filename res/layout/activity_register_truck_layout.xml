    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:background="@color/content_color" >

        <RelativeLayout
            android:id="@+id/rl_license_plate_number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="3dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tv_license_plate_number_detail"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/license_plate_number"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_license_plate_number_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_license_plate_number_detail"
                android:hint="@string/must_fillout"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:gravity="right|center_vertical"/>
        </RelativeLayout>

