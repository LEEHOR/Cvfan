        <RelativeLayout
            android:id="@+id/rl_truck_brand"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/rl_license_plate_number"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/truck_brand"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_truck_brand_detail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_truck_brand"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:hint="@string/must_fillout"
                android:textColor="@color/text_color"
                android:textSize="16sp" 
                android:gravity="right|center_vertical"/>
            <ImageView 
                android:id="@+id/iv_truck_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xq_img7"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_truck_model"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/rl_truck_brand"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/truck_model"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_truck_model_detail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_truck_model_more"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:hint="@string/must_fillout"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:gravity="right|center_vertical" />
            <ImageView 
                android:id="@+id/iv_truck_model_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xq_img7"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        
        
        <RelativeLayout
            android:id="@+id/rl_engine_number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/rl_truck_model"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_engine_number_detail"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/engine_number"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_engine_number_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_engine_number_detail"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:gravity="right|center_vertical" />
           
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_carframe_number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/rl_engine_number"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_carframe_number_detail"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/carframe_number"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_carframe_number_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_carframe_number_detail"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:gravity="right|center_vertical" />
           
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_driving_license_pic"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/rl_carframe_number"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_license_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/driving_license_pic"
                android:textColor="@color/text_color"
                android:textSize="16sp" />
            
            <ImageView
                android:id="@+id/tv_image_url"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/iv_driving_license_pic_more"
                 />

            <ImageView 
                android:id="@+id/iv_driving_license_pic_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xq_img7"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/rl_truck_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_driving_license_pic"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp"
    		android:layout_marginRight="1dp"
    		android:textSize="16sp"
            android:background="@color/btn_main_bg"
            android:text="@string/register"
            android:textColor="@color/white" />

</RelativeLayout>