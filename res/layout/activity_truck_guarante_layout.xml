<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:background="@color/content_color" >
    
    <TextView
        android:id="@+id/tv_vehicle_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="@string/truck_guarante_hint"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_license_plate_number"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white" 
        android:layout_below="@+id/tv_vehicle_hint">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/license_plate_number"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_license_plate_number_detail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_license_plate_number_more"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:gravity="right|center_vertical" />

        <ImageView
            android:id="@+id/iv_license_plate_number_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_carframe_number"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/rl_license_plate_number"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/carframe_number"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_carframe_number_detail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_carframe_number_more"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:gravity="right|center_vertical" />

        <ImageView
            android:id="@+id/iv_carframe_number_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_driving_license_pic"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/rl_carframe_number"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/guarante_station"
            android:textColor="@color/text_color"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/tv_assurance_station_detail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_station_name"
            android:layout_toLeftOf="@+id/iv_driving_license_pic_more"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:gravity="right|center_vertical" />

        <ImageView
            android:id="@+id/iv_driving_license_pic_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/xq_img7" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_no_maintain_station"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_driving_license_pic"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:textSize="16sp"
        android:background="@color/btn_main_bg"
        android:text="@string/request_station_guarante"
        android:textColor="@color/white" />

</RelativeLayout>