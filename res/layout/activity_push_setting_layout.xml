<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0" >

    <TextView
        android:id="@+id/tv_push_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="推送消息开关"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/rl_push_switch"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/tv_push_switch"
        android:layout_marginTop="15dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/push_function"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <com.coahr.cvfan.view.SlipSwitch
            android:id="@+id/sw_push_function"
            android:layout_width="81dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" 
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_notify_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_push_switch"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="推送消息提醒设置"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/rl_mark_switch"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/tv_notify_setting"
        android:layout_marginTop="15dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/mark_switch"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <com.coahr.cvfan.view.SlipSwitch
            android:id="@+id/sw_mark_switch"
            android:layout_width="81dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" 
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_notify_switch"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/rl_mark_switch"
        android:layout_marginTop="10dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/notify_switch"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <com.coahr.cvfan.view.SlipSwitch
            android:id="@+id/sw_notify_switch"
            android:layout_width="81dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" 
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_voice_switch"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/rl_notify_switch"
        android:layout_marginTop="15dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/voice_switch"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <com.coahr.cvfan.view.SlipSwitch
            android:id="@+id/sw_voice_switch"
            android:layout_width="81dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" 
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

</RelativeLayout>